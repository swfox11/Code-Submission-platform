<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Entries Table</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 3px;
      padding: 3px;
      background-color: #f2f2f2;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #4CAF50;
      color: white;
    }
    tr:hover {
      background-color: #f5f5f5;
    }
    button[type="submit"] {
      margin-left: 10 px;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }

    button[type="submit"]:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
    <h1>Submissions (Newest submission appears first)</h1>
    <form action="/">
        <div>
            <button type="submit">Go to form</button>
          </div>
      </form>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Code Language</th>
        <th>Stdin</th>
        <th>Stdout</th>
        <th>Source Code</th>
        <th>Timestamp</th>
      </tr>
    </thead>
    <% let n=locals.array.length; %>
    <tbody>
      <%  for(let i=n-1;i>=0;i--){  %>
        <tr>
          <td><%= array[i].username %></td>
          <td><%= array[i].language %></td>
          <td><%= array[i].stdin %></td>
          <td><%= array[i].stdout %></td>
          <td><%= array[i].sourcecode.slice(0, 100) %></td>
          <td><%= array[i].time %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
